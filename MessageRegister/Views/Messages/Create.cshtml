@model MessageRegister.Models.Message

@{
    ViewBag.Title = "Send SMS";
}

<h2>Send SMS</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Message</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.MesaggeTime, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @*@Html.TextBoxFor(x => x.MesaggeTime, "{0:MM/dd/yy H:mm:ss zzz}", new { @Value = @DateTime.Now.ToString() })*@

                @*@Html.TextBoxFor(x => x.MesaggeTime, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })*@

                @*@Html.EditorFor(model => model.MesaggeTime, "{0:MM/dd/yy H:mm:ss zzz}", new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.MesaggeTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MessageUser, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MessageUser, new { htmlAttributes = new { @class = "form-control", placeholder="Your message here. Maximum 160 Characters" } })
                @Html.ValidationMessageFor(model => model.MessageUser, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-info" onclick=" @DateTime.Now.ToString()"/>
               
            </div>
